        {
          "name": "Register Player",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"username\": \"testplayer\",\n  \"password\": \"password123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            },
            "description": "Register a new player account"
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "pm.test(\"Response has player data\", function () {",
                  "    pm.expect(jsonData).to.have.property('player');",
                  "});",
                  "pm.test(\"Player has id\", function () {",
                  "    pm.expect(jsonData.player).to.have.property('id');",
                  "});"
                ]
              }
            },
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// Pre-request script - set dynamic values if needed",
                  "pm.request.body.raw = JSON.stringify({",
                  "  email: 'player' + Date.now() + '@example.com',",
                  "  username: 'player' + Date.now(),",
                  "  password: 'password123'",
                  "});"
                ]
              }
            }
